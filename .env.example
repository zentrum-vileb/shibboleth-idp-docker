IDP_LDAP_OLC_DB_INDEX="cn,uid"

# Ldap organization
IDP_LDAP_BIND_BASE_DN="dc=test,dc=example,dc=org"

# Ldap units
IDP_LDAP_BASE_OU_USERS="ou=accounts,${IDP_LDAP_BIND_BASE_DN}"
