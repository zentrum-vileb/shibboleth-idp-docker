# USER
# Should match an user and group from host
CONTAINER_UID=1000
CONTAINER_GID=1000
CONTAINER_USER_NAME=tomcat
CONTAINER_USER_GROUPNAME=tomcat

# Proxy for module installations (optional)
IDP_WWW_PROXY_HOST=wwwproxy.example.org
